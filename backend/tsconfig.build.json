{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@modules/*": ["src/modules/*"],
			"@common/*": ["src/common/*"],
			"@config/*": ["src/config/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
